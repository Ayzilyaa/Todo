<Window x:Class="Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="Log in" Height="640" Width="800" ResizeMode="NoResize">
    <Grid Margin="0,0,0,-6">
        <Label Content="Добро пожаловать!" HorizontalAlignment="Left" Margin="350,50,0,0" VerticalAlignment="Top" FontSize="36" Width="342"/>
        <Label Content="Почта" HorizontalAlignment="Left" Margin="350,168,0,0" VerticalAlignment="Top" FontSize="30" Width="105"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="350,265,0,0" VerticalAlignment="Top" FontSize="30" RenderTransformOrigin="0.552,2.51" Width="121"/>
        <TextBox x:Name="TBEmail" HorizontalAlignment="Left" Margin="355,223,0,0" TextWrapping="Wrap" Text="Почта" VerticalAlignment="Top" Width="362" FontSize="18" BorderThickness="0,0,0,1" Foreground="#FF928B8B" Height="30"/>
        <Image HorizontalAlignment="Left" Height="192" Margin="29,27,0,0" VerticalAlignment="Top" Width="210" Source="/logo.png"/>
        <Button Content="Войти" HorizontalAlignment="Left" Margin="368,416,0,0" VerticalAlignment="Top" Click="LogIn" RenderTransformOrigin="0.5,0.5" FontSize="22" Width="336" Height="50" Foreground="#FFFEFEFE" Background="#FF0000" BorderBrush="White">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15 15 5 5"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="Регистрация" HorizontalAlignment="Left" Margin="368,479,0,0" VerticalAlignment="Top" FontSize="22" Width="337" Height="50" Background="#FF0000" Foreground="White" BorderBrush="White" Click="Registation">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5 5 15 15"/>
                </Style>
            </Button.Resources>
        </Button>
        <TextBox x:Name="TBPassword"  HorizontalAlignment="Left" Margin="355,320,0,0" TextWrapping="Wrap" Text="Пароль&#xD;&#xA;" VerticalAlignment="Top" Width="362" FontSize="18" BorderThickness="0,0,0,1" Foreground="#FF928B8B" Height="30" />
        <Label Content="Восстановить пароль" HorizontalAlignment="Left" Margin="519,366,0,0" VerticalAlignment="Top" FontSize="22" Width="232" Height="50"/>

    </Grid>
</Window>