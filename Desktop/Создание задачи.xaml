<Window x:Class="Desktop.Создание_задачи"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="Создание_задачи" Height="570" Width="720">
    <Grid Background="#ffffff">
        <Label Content="Название" HorizontalAlignment="Left" Margin="36,10,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="Название" HorizontalAlignment="Left" Margin="36,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="351" BorderBrush="#FFE9E3E3" Height="81">
            <TextBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="12 12 12 12"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Label Content="Категория" HorizontalAlignment="Left" Margin="36,138,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Описание" HorizontalAlignment="Left" Margin="38,222,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="Описание" HorizontalAlignment="Left" Margin="36,264,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="351" BorderBrush="#FFE9E3E3" Height="149">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="12 12 12 12"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Button Content="Создать" HorizontalAlignment="Left" Margin="193,437,0,0" VerticalAlignment="Top" Background="#FF5DAA44" FontSize="15" Click="Button_Click" Foreground="White" Height="36" Width="351" BorderBrush="White" RenderTransformOrigin="0.313,0.515">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8 8 8 8"/>
                </Style>
            </Button.Resources>
        </Button>
        <DatePicker x:Name="Дата" HorizontalAlignment="Left"   VerticalAlignment="Top" Height="165" Width="216" Margin="440,28,0,0"/>
        <Button Content="Отмена" HorizontalAlignment="Left" Margin="193,478,0,0" VerticalAlignment="Top" Background="#FF0000" FontSize="15" Click="Button_Click_1" Foreground="White" Height="36" Width="352" BorderBrush="White">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8 8 8 8"/>
                </Style>
            </Button.Resources>
        </Button>
        <ComboBox x:Name="Категория" HorizontalAlignment="Left" Margin="36,180,0,0" VerticalAlignment="Top" Width="351" BorderBrush="White" Height="37" Text="" Background="White">
            <ComboBoxItem Content="Дом"/>
            <ComboBoxItem Content="Работа"/>
            <ComboBoxItem Content="Учеба"/>
            <ComboBoxItem Content="Отдых"/>
