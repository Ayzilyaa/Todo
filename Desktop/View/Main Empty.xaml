<Page x:Class="Desktop.View.Main_Empty"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop.View"
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="800"
      Title="Main_Empty">
    <Grid>
        <Label Content="Добро пожаловать!" HorizontalAlignment="Left" Margin="188,150,0,0" VerticalAlignment="Top" FontSize="40" Height="69" Width="391"/>
        <Label Content="Создайте свою первую&#xD;&#xA;задачу!" HorizontalAlignment="Left" Margin="188,219,0,0" VerticalAlignment="Top" FontSize="40" Width="554" Height="127"/>
        <Button Content="Создать первую задачу" HorizontalAlignment="Center" Margin="0,366,0,0" VerticalAlignment="Top" Background="#FF0000" FontSize="28" Click="Button_Click" Foreground="White" Height="69" Width="388" BorderBrush="White">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="9,9,9,9"/>
                </Style>
            </Button.Resources>
        </Button>
        <Image x:Name="Photo" HorizontalAlignment="Left" Height="107" Margin="10,10,0,0" VerticalAlignment="Top" Width="110" MouseLeftButtonDown="Photo_MouseLeftButtonDown" Source="/logo1.png">
            <Image.ContextMenu>
                <ContextMenu x:Name="Menu">
                    <MenuItem Header="Выход" Click="Exit_Click" />
                    <MenuItem Header="Изменить фото профиля" Click="ChangeProfilePhoto_Click"/>
                </ContextMenu>
            </Image.ContextMenu>
        </Image>
    </Grid>
    </Page>
