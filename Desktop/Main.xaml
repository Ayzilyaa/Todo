<Window x:Class="Desktop.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="Main" Height="640" Width="800">
    <Grid>
        <Button Content="Дом" HorizontalAlignment="Left" Margin="136,52,0,0" VerticalAlignment="Top" BorderBrush="White" Background="{x:Null}" Foreground="Green" FontSize="20" Click="DomButton_Click"/>
        <Button Content="Работа" HorizontalAlignment="Left" Margin="200,52,0,0" VerticalAlignment="Top" BorderBrush="White" Background="{x:Null}" Foreground="Red" FontSize="20" Click="RabotaButton_Click"/>
        <Button Content="Учеба" HorizontalAlignment="Left" Margin="285,52,0,0" VerticalAlignment="Top" BorderBrush="White" Background="{x:Null}" Foreground="Blue" FontSize="20"  Click="UchebaButton_Click"/>
        <Button Content="Отдых" HorizontalAlignment="Left" Margin="359,52,0,0" VerticalAlignment="Top" BorderBrush="White" Background="{x:Null}" Foreground="Purple" FontSize="20" Click="OtdihButton_Click"/>
        <Button Content="Задачи" HorizontalAlignment="Left" Margin="18,245,0,0" VerticalAlignment="Top" BorderBrush="White" Background="{x:Null}" Foreground="Purple" FontSize="28"/>
        <Button Content="История" HorizontalAlignment="Left" Margin="18,282,0,0" VerticalAlignment="Top" BorderBrush="White" Background="{x:Null}" Foreground="Purple" FontSize="28"/>
        <Button Content="+" HorizontalAlignment="Left" Margin="26,497,0,0" VerticalAlignment="Top" Background="#FFDD5336" FontSize="20" Click="Button_Click" Foreground="White" Height="57" Width="66" BorderBrush="White">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="27 27 27 27"/>
                </Style>
            </Button.Resources>
        </Button>
        <Image x:Name="Photo" HorizontalAlignment="Left" Height="70" Margin="10,10,0,0" VerticalAlignment="Top" Width="80"  Source="/logo1.png">
            <Image.ContextMenu>
                <ContextMenu x:Name="Menu">
                    <MenuItem Header="Выход" Click="Выход_Click"  />
                    <MenuItem Header="Изменить фото профиля" Click="СменаФото_Click" />
                </ContextMenu>
            </Image.ContextMenu>
        </Image>
        <Border BorderBrush="Black" BorderThickness="1" Margin="501,0,28,110" Height="369" VerticalAlignment="Bottom">
            <StackPanel Height="368" VerticalAlignment="Center">
                <Label Content="Заголовок" HorizontalAlignment="Center" FontSize="32"/>
                <StackPanel Orientation="Horizontal" Height="26" Width="230">
                    <TextBlock x:Name="DetailTime"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="39" Width="230">
                    <TextBlock x:Name="DetailDate"/>
                </StackPanel>
                <Border>
                </Border>
                <TextBlock x:Name="DetailDescription" TextWrapping="Wrap" Height="151" Width="230"/>
                <Button x:Name="CompleteButton" Content="Готово" Click="CompleteButton_Click" Height="40" Margin="0,0,0,5" Width="224" BorderBrush="#FF0000" Background="#FF0000" Foreground="White" FontSize="22" >
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="15 15 5 5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="DeleteButton" Content="Удалить" Click="DeleteButton_Click" Height="40" Margin="0,5,0,0" Width="224" Background="#FF0000" BorderBrush="#FF0000" Foreground="White" FontSize="22">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5 5 15 15"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>
        <Label Content="{Binding UserName}" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top" FontSize="16" Width="106" Height="31"/>
        <ListBox x:Name="TasksListBox" Margin="136,105,329,33" SelectionChanged="TasksListBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <CheckBox Content="{Binding Title}" 
               IsChecked="{Binding IsCompleted}" 
               Margin="5" FontSize="14"/>
                        <TextBlock Text="{Binding DisplayTime}" 
                   Margin="25,1,0,0" 
                   FontSize="11" 
                   Foreground="#666666"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
