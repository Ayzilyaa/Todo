<Window x:Class="Desktop.MainEmpty"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="MainEmpty" Height="640" Width="800">
    <Grid>
        <Image x:Name="Photo" HorizontalAlignment="Left" Height="90" Margin="10,39,0,0" VerticalAlignment="Top" Width="104" MouseLeftButtonDown="Photo_MouseLeftButtonDown" >
            <Image.ContextMenu>
                <ContextMenu x:Name="Menu">
                    <MenuItem Header="Выход" Click="Exit_Click" />
                    <MenuItem Header="Изменить фото профиля" Click="ChangeProfilePhoto_Click"/>
                </ContextMenu>
            </Image.ContextMenu>
        </Image>
        <Label Content="Добро пожаловать!" HorizontalAlignment="Left" Margin="164,70,0,0" VerticalAlignment="Top" FontSize="36"/>
        <Label Content="Создайте свою первую&#xD;&#xA;задачу!" HorizontalAlignment="Left" Margin="164,168,0,0" VerticalAlignment="Top" FontSize="36" Width="529"/>
        <Button Content="Создать первую задачу" HorizontalAlignment="Center" Margin="0,344,0,0" VerticalAlignment="Top" Background="#FFEA5656" FontSize="20" Click="Button_Click" Foreground="White" Height="74" Width="311" BorderBrush="White">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="7 7 7 7"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Window>