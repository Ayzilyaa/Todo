<Window x:Class="Desktop.MainEmpty"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="MainEmpty" Height="620" Width="800">
    <Grid>
        <Label Content="Добро пожаловать!" HorizontalAlignment="Left" Margin="188,150,0,0" VerticalAlignment="Top" FontSize="40" Height="69" Width="391"/>
        <Label Content="Создайте свою первую&#xD;&#xA;задачу!" HorizontalAlignment="Left" Margin="188,219,0,0" VerticalAlignment="Top" FontSize="40" Width="554" Height="127"/>
        <Button Content="Создать первую задачу" HorizontalAlignment="Center" Margin="0,422,0,0" VerticalAlignment="Top" Background="#FF0000" FontSize="28" Click="Button_Click" Foreground="White" Height="69" Width="389" BorderBrush="White">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="9,9,9,9"/>
                </Style>
            </Button.Resources>
        </Button>
        <Image x:Name="Photo"
           Width="145" Height="145"
           Margin="12"
           Source="/logo1.png"
           HorizontalAlignment="Left"
           VerticalAlignment="Top"
           MouseLeftButtonDown="Photo_MouseLeftButtonDown"/>

            <!-- Панель (тоже слева, под фото) -->
            <StackPanel x:Name="MenuPanel"
                Background="#DDDDDD"
                Visibility="Collapsed"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="12,160,0,0">
                <Button Content="Изменить фото профиля"
                Margin="0 0 0 5"
                Click="ChangeProfilePhoto_Click"/>
                <Button Content="Выход"
                Click="Exit_Click"/>
            </StackPanel>
        </Grid>
</Window>